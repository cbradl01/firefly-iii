    <!-- Custom chart initialization with crosshair and enhanced tooltips -->
    <script type="text/javascript" nonce="{{ JS_NONCE }}">
        $(function() {
            // Set initial value in header date range display with readable format
            $('#daterange').text('{{ start.format('F jS, Y') }} - {{ end.format('F jS, Y') }}');
            
            // Make the header date range clickable and initialize enhanced date range picker
            $('#daterange').attr('title', 'Click to change date range');
            $('#daterange').daterangepicker({
                startDate: moment('{{ start.format('Y-m-d') }}'),
                endDate: moment('{{ end.format('Y-m-d') }}'),
                opens: 'center',
                showDropdowns: true,
                showWeekNumbers: false,
                showISOWeekNumbers: false,
                autoUpdateInput: false,
                alwaysShowCalendars: false,
                drops: 'down',
                singleDatePicker: false,
                linkedCalendars: false,
                minDate: moment('2000-01-01'),
                maxDate: moment(),
                locale: {
                    format: 'YYYY-MM-DD',
                    separator: ' - ',
                    applyLabel: 'Apply',
                    cancelLabel: 'Cancel',
                    fromLabel: 'From',
                    toLabel: 'To',
                    customRangeLabel: 'Custom',
                    weekLabel: 'W',
                    daysOfWeek: ['Su', 'Mo', 'Tu', 'We', 'Th', 'Fr', 'Sa'],
                    monthNames: ['January', 'February', 'March', 'April', 'May', 'June', 'July', 'August', 'September', 'October', 'November', 'December'],
                    firstDay: 1
                },
                ranges: {
                    'Today': [moment(), moment()],
                    'Yesterday': [moment().subtract(1, 'days'), moment().subtract(1, 'days')],
                    'Last 7 Days': [moment().subtract(6, 'days'), moment()],
                    'Last 30 Days': [moment().subtract(29, 'days'), moment()],
                    'This Month': [moment().startOf('month'), moment().endOf('month')],
                    'Last Month': [moment().subtract(1, 'month').startOf('month'), moment().subtract(1, 'month').endOf('month')],
                    'Last 3 Months': [moment().subtract(3, 'months'), moment()],
                    'Last 6 Months': [moment().subtract(6, 'months'), moment()],
                    'This Year': [moment().startOf('year'), moment().endOf('year')],
                    'Last Year': [moment().subtract(1, 'year').startOf('year'), moment().subtract(1, 'year').endOf('year')],
                    'Last 2 Years': [moment().subtract(2, 'years'), moment()],
                    'Last 5 Years': [moment().subtract(5, 'years'), moment()],
                    'All Time': [moment().subtract(10, 'years'), moment()]
                }
            }, function(start, end, label) {
                // Debug: Log the raw callback parameters
                console.log('Date range picker callback - raw start:', start, 'raw end:', end, 'label:', label);
                console.log('Start type:', typeof start, 'End type:', typeof end);
                console.log('Start isMoment:', moment.isMoment(start), 'End isMoment:', moment.isMoment(end));
                
                // Ensure we have valid moment objects
                if (!moment.isMoment(start) || !moment.isMoment(end)) {
                    console.error('Invalid moment objects in callback:', start, end);
                    return;
                }
                
                // Format dates using the same format as the working URL
                var startFormatted = start.format('YYYY-MM-DD');
                var endFormatted = end.format('YYYY-MM-DD');
                
                // Update the header date range display with readable format
                var startReadable = start.format('MMMM Do, YYYY');
                var endReadable = end.format('MMMM Do, YYYY');
                $('#daterange').text(startReadable + ' - ' + endReadable);
                
                // Debug: Log the formatted dates
                console.log('Date range picker callback - formatted start:', startFormatted, 'formatted end:', endFormatted);
                
                // Update chart when date range changes
                updateChartDateRange(start, end);
            });
            
            // Custom logic to filter end year options based on start year
            $('#daterange').on('show.daterangepicker', function(ev, picker) {
                // Function to update end year options based on start year
                function updateEndYearOptions() {
                    var startYear = picker.startDate.year();
                    var endYearSelect = picker.container.find('.drp-calendar.right .yearselect');
                    var currentEndYear = picker.endDate.year();
                    
                    // Clear existing options
                    endYearSelect.empty();
                    
                    // Add years from start year to current year
                    for (var year = startYear; year <= moment().year(); year++) {
                        var option = $('<option></option>')
                            .attr('value', year)
                            .text(year)
                            .prop('selected', year === currentEndYear);
                        endYearSelect.append(option);
                    }
                }
                
                // Update end year options when start year changes
                picker.container.find('.drp-calendar.left .yearselect').on('change', function() {
                    var newStartYear = parseInt($(this).val());
                    var newStartDate = picker.startDate.clone().year(newStartYear);
                    
                    // Update start date
                    picker.setStartDate(newStartDate);
                    
                    // Update end year options
                    updateEndYearOptions();
                    
                    // If current end year is before new start year, adjust end date
                    if (picker.endDate.year() < newStartYear) {
                        var newEndDate = newStartDate.clone();
                        picker.setEndDate(newEndDate);
                    }
                });
                
                // Update end date when end year changes
                picker.container.find('.drp-calendar.right .yearselect').on('change', function() {
                    var newEndYear = parseInt($(this).val());
                    var newEndDate = picker.endDate.clone().year(newEndYear);
                    picker.setEndDate(newEndDate);
                });
                
                // Initial setup
                updateEndYearOptions();
            });
            
            // Note: Using category scale instead of time scale to avoid date adapter issues
            
            // Override the default lineNoStartZeroChart call with crosshair and enhanced tooltips
            var colorData = true;
            var options = $.extend(true, {}, defaultChartOptions);
            var chartType = 'line';
            
            // Set beginAtZero to false for account balance charts
            options.scales.y.ticks.beginAtZero = false;
            
            // Conditional fill colors are now handled in charts.js
            
            // Enhanced tooltip configuration for Chart.js 4.x
            options.plugins = options.plugins || {};
            options.plugins.tooltip = $.extend(true, options.plugins.tooltip || {}, {
                mode: 'index',
                intersect: false,
                enabled: true,
                position: 'nearest',
                callbacks: {
                    title: function(context) {
                        // Show the actual label from the chart data
                        if (context.length > 0 && context[0].chart && context[0].chart.data && context[0].chart.data.labels) {
                            var index = context[0].dataIndex;
                            return context[0].chart.data.labels[index] || '';
                        }
                        return '';
                    },
                    label: function(context) {
                        // Show account name, currency, and balance using proper accounting formatting
                        var dataset = context.dataset;
                        var value = context.parsed.y;
                        var currency = dataset.currency_symbol || '';
                        var accountName = dataset.label || 'Account';
                        
                        // Use accounting.formatMoney for proper currency formatting (like the original)
                        var formattedValue = accounting.formatMoney(value, currency);
                        
                        return accountName + ': ' + formattedValue;
                    }
                }
            });
            
            // Crosshair configuration is now handled in the chart creation logic
            
            // Note: Chart.js v4 zoom requires a separate plugin
            // For now, we'll use the date range picker for zoom functionality
            
            // Debug: Log the final options
            console.log('Final chart options:', options);
            
            // Note: We don't register the crosshair plugin globally to avoid conflicts with pie charts
            // The crosshair plugin will be applied only to the line chart via the options.plugins.crosshair configuration
            
            // Chart title is now handled by HTML above the chart
            
            // Debug: Log the chart options
            console.log('Chart options:', options);
            console.log('Chart URL:', chartUrl);
            
            // Call the chart drawing function with our custom options
            drawAChart(chartUrl, 'overview-chart', chartType, options, colorData);
        });
        
        // Function to update chart when date range changes
        function updateChartDateRange(start, end) {
            // Ensure we have valid moment objects
            if (!moment.isMoment(start) || !moment.isMoment(end)) {
                console.error('Invalid date objects passed to updateChartDateRange:', start, end);
                return;
            }
            
            var startDate = start.format('YYYY-MM-DD');
            var endDate = end.format('YYYY-MM-DD');
            
            // Validate the formatted dates
            if (!startDate.match(/^\d{4}-\d{2}-\d{2}$/) || !endDate.match(/^\d{4}-\d{2}-\d{2}$/)) {
                console.error('Invalid date format:', startDate, endDate);
                return;
            }
            
            // Build new chart URL with updated date range
            // Use the same pattern as the original chartUrl but replace the dates
            var baseUrl = '{{ chartUrl }}';
            var newChartUrl = baseUrl.replace(/\/\d{4}-\d{2}-\d{2}\/\d{4}-\d{2}-\d{2}$/, '/' + startDate + '/' + endDate);
            
            console.log('Updating chart with new date range:', startDate, 'to', endDate);
            console.log('Original chart URL:', baseUrl);
            console.log('New chart URL:', newChartUrl);
            console.log('Current chart exists:', !!allCharts['overview-chart']);
            
            // Show loading indicator
            $('#overview-chart').css('opacity', '0.5');
            
            // Update the page URL to reflect the new date range (as path parameters, not query parameters)
            // TODO: Consider updating the backend route to accept start/end dates as query parameters instead of path parameters
            // This would be more intuitive: /accounts/show/123?start=2025-01-01&end=2025-10-08
            // Current route expects: /accounts/show/123/2025-01-01/2025-10-08
            var currentPath = window.location.pathname;
            var accountId = currentPath.match(/\/accounts\/show\/(\d+)/)[1];
            var newUrl = '/accounts/show/' + accountId + '/' + startDate + '/' + endDate;
            window.history.pushState({}, '', newUrl);
            
            // Update the chart with new data
            $.getJSON(newChartUrl).done(function(data) {
                console.log('New chart data received:', data);
                console.log('Data labels:', data.labels);
                console.log('Data datasets:', data.datasets);
                
                // Update the existing chart with new data
                if (allCharts['overview-chart']) {
                    console.log('Updating existing chart...');
                    
                    // Apply conditional fill colors for line charts
                    if (data.datasets && data.datasets.length > 0) {
                        applyConditionalFillColors(data.datasets[0]);
                    }
                    
                    allCharts['overview-chart'].data.labels = data.labels;
                    allCharts['overview-chart'].data.datasets = data.datasets;
                    allCharts['overview-chart'].update('none'); // Use 'none' for instant update
                    console.log('Chart updated successfully');
                } else {
                    console.error('Chart not found in allCharts');
                }
                
                // Hide loading indicator
                $('#overview-chart').css('opacity', '1');
            }).fail(function(xhr, status, error) {
                console.error('Failed to load new chart data:', status, error);
                console.error('Response:', xhr.responseText);
                alert('Failed to load chart data for the selected date range: ' + error);
                
                // Hide loading indicator
                $('#overview-chart').css('opacity', '1');
            });
        }
        
    </script>
