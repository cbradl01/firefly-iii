            <div class="col-lg-4 col-md-6 col-sm-12 col-xs-12">
                <div class="box">
                    <div class="box-header with-border">
                        <h3 class="box-title">pay-off by date</h3>
                    </div>
                    <div class="box-body">
                        Content
                    </div>
                </div>
            </div>
        </div>
    {% endif %}
