{% extends './layout/default' %}

{% block breadcrumbs %}
    <ol class="breadcrumb">
        <li><a href="{{ route('index') }}"><span class="fa fa-home"></span></a></li>
        <li><a href="{{ route('accounts.index', objectType) }}">{{ objectType|title }} Accounts</a></li>
        <li class="active">Import Accounts</li>
    </ol>
{% endblock %}

{% block content %}
    <div class="row">
        <div class="col-lg-12 col-md-12 col-sm-12">
            <div class="box">
                <div class="box-header with-border">
                    <h3 class="box-title">
                        {{ subTitle }}
                    </h3>
                </div>
                <div class="box-body">
                    <div class="row">
                        <div class="col-lg-8 col-md-8 col-sm-12">
                            <p>
                                Upload a CSV file (.csv) to import multiple accounts at once. The first row should contain column headers.
                            </p>
                            
                            <div class="alert alert-info">
                                <h4>Required columns</h4>
                                <ul>
                                    <li><strong>name</strong> or <strong>account_name</strong> - Account name (required)</li>
                                    <li><strong>institution</strong> - Financial institution (optional)</li>
                                    <li><strong>opening_balance</strong> - Opening balance (optional)</li>
                                    <li><strong>opening_balance_date</strong> - Opening balance date (optional)</li>
                                    <li><strong>currency_code</strong> - Currency code (optional, defaults to your default currency)</li>
                                    <li><strong>iban</strong> - IBAN (optional)</li>
                                    <li><strong>account_number</strong> - Account number (optional)</li>
                                    <li><strong>notes</strong> - Account notes (optional)</li>
                                    <li><strong>active</strong> - Active status (1/true/yes/active for active, 0/false/no/inactive for inactive)</li>
                                </ul>
                            </div>

                            <form method="post" action="{{ route('accounts.import.csv.process', objectType) }}" enctype="multipart/form-data">
                                {{ csrf_field() }}
                                
                                <div class="form-group">
                                    <label for="csv_file">CSV file</label>
                                    <input type="file" class="form-control" id="csv_file" name="csv_file" accept=".csv,.txt" required>
                                    <small class="form-text text-muted">
                                        Select a CSV file (.csv) with account data. Maximum file size: 10MB.
                                    </small>
                                </div>

                                <div class="form-group">
                                    <button type="submit" class="btn btn-success">
                                        <span class="fa fa-upload fa-fw"></span> Import accounts
                                    </button>
                                    <a href="{{ route('accounts.index', objectType) }}" class="btn btn-default">
                                        <span class="fa fa-arrow-left fa-fw"></span> Back to accounts
                                    </a>
                                </div>
                            </form>
                        </div>
                        
                        <div class="col-lg-4 col-md-4 col-sm-12">
                            <div class="box">
                                <div class="box-header with-border">
                                    <h3 class="box-title">Import tips</h3>
                                </div>
                                <div class="box-body">
                                    <ul>
                                        <li>Make sure your CSV file has headers in the first row</li>
                                        <li>Account names must be unique - duplicates will be skipped</li>
                                        <li>Opening balance dates should be in YYYY-MM-DD format</li>
                                        <li>Empty rows will be automatically skipped</li>
                                        <li>You can convert Excel files to CSV using the provided converter script</li>
                                    </ul>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}

{% block scripts %}
    <script type="text/javascript" nonce="{{ JS_NONCE }}">
        // Add any JavaScript for file validation or preview here
    </script>
{% endblock %}
