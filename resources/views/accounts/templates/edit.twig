{% extends './layout/default' %}

{% block breadcrumbs %}
    {{ Breadcrumbs.render(Route.getCurrentRoute().getName(), account) }}
{% endblock %}

{% block content %}
<div class="row">
    <div class="col-lg-12 col-md-12 col-sm-12">
        <div class="box">
            <div class="box-header with-border">
                <h3 class="box-title">
                    <span class="fa fa-edit"></span>
                    Edit account from template: {{ template.name }}
                </h3>
                <div class="box-tools pull-right">
                    <a href="{{ route('accounts.show', account.id) }}" class="btn btn-default btn-sm">
                        <span class="fa fa-arrow-left"></span>
                        {{ ('back_to_account')|_ }}
                    </a>
                </div>
            </div>
            <div class="box-body">
                <div class="row">
                    <div class="col-md-8">
                        <form method="POST" action="{{ route('accounts.update', account.id) }}" id="account-form">
                            {{ csrf_field() }}
                            <input type="hidden" name="template" value="{{ template.name }}">
                            <input type="hidden" name="account_type_id" value="{{ template.account_type_id }}">

                            <!-- Basic Information -->
                            <div class="box">
                                <div class="box-header with-border">
                                        <h4 class="box-title">
                                            <span class="fa fa-info-circle"></span>
                                            Basic Information
                                        </h4>
                                </div>
                                <div class="box-body">
                                    <div class="row">
                                        <div class="col-md-6">
                                            <div class="form-group">
                                                <label for="name">
                                                    Account Name <span class="text-danger">*</span>
                                                </label>
                                                <input type="text" class="form-control" id="name" name="name" required value="{{ old('name', account.name) }}">
                                                {% if errors.has('name') %}
                                                    <span class="text-danger">{{ errors.first('name') }}</span>
                                                {% endif %}
                                            </div>
                                        </div>
                                        <div class="col-md-6">
                                            <div class="form-group">
                                                <label for="currency_id">
                                                    Currency <span class="text-danger">*</span>
                                                </label>
                                                <select class="form-control" id="currency_id" name="currency_id" required>
                                                    <option value="">Select Currency</option>
                                                    {% for curr in allCurrencies %}
                                                        <option value="{{ curr.id }}" 
                                                                {{ (old('currency_id', currency.id) == curr.id) ? 'selected' : '' }}>
                                                            {{ curr.code }} - {{ curr.name }}
                                                        </option>
                                                    {% endfor %}
                                                </select>
                                                {% if errors.has('currency_id') %}
                                                    <span class="text-danger">{{ errors.first('currency_id') }}</span>
                                                {% endif %}
                                            </div>
                                        </div>
                                    </div>
                                    <div class="row">
                                        <div class="col-md-6">
                                            <div class="form-group">
                                                <label for="institution">
                                                    Institution <span class="text-danger">*</span>
                                                </label>
                                                <input type="text" class="form-control" id="institution" name="institution" required value="{{ old('institution', institution) }}" placeholder="Enter institution name">
                                                {% if errors.has('institution') %}
                                                    <span class="text-danger">{{ errors.first('institution') }}</span>
                                                {% endif %}
                                            </div>
                                        </div>
                                        <div class="col-md-6">
                                            <div class="form-group">
                                                <label for="owner">
                                                    Owner <span class="text-danger">*</span>
                                                </label>
                                                <select class="form-control" id="owner" name="owner" required>
                                                    <option value="">Select an entity...</option>
                                                    {% for entity in userEntities %}
                                                        <option value="{{ entity.display_name }}" 
                                                                {% if old('owner', owner) == entity.display_name or (not old('owner') and not owner and userEntity and entity.id == userEntity.id) %}selected{% endif %}>
                                                            {{ entity.display_name }} ({{ entity.entity_type|title }})
                                                        </option>
                                                    {% endfor %}
                                                    <option value="__new_entity__">+ Create New Entity</option>
                                                </select>
                                                {% if errors.has('owner') %}
                                                    <span class="text-danger">{{ errors.first('owner') }}</span>
                                                {% endif %}
                                                <small class="form-text text-muted">
                                                    <a href="{{ route('financial-entities.create') }}" target="_blank">Create a new financial entity</a>
                                                </small>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="row">
                                        <div class="col-md-6">
                                            <div class="form-group">
                                                <label for="product_name">
                                                    Product Name <span class="text-danger">*</span>
                                                </label>
                                                <input type="text" class="form-control" id="product_name" name="product_name" required value="{{ old('product_name', productName) }}" placeholder="Enter product name">
                                                {% if errors.has('product_name') %}
                                                    <span class="text-danger">{{ errors.first('product_name') }}</span>
                                                {% endif %}
                                            </div>
                                        </div>
                                        <div class="col-md-6">
                                            <div class="form-group">
                                                <label for="iban">
                                                    IBAN (Optional)
                                                </label>
                                                <input type="text" class="form-control" id="iban" name="iban" value="{{ old('iban', account.iban) }}" placeholder="Enter IBAN">
                                                {% if errors.has('iban') %}
                                                    <span class="text-danger">{{ errors.first('iban') }}</span>
                                                {% endif %}
                                            </div>
                                        </div>
                                    </div>
                                    <div class="row">
                                        <div class="col-md-6">
                                            <div class="form-group">
                                                <label for="virtual_balance">
                                                    Virtual Balance (Optional)
                                                </label>
                                                <input type="number" step="0.01" class="form-control" id="virtual_balance" name="virtual_balance" value="{{ old('virtual_balance', account.virtual_balance) }}" placeholder="Enter virtual balance">
                                                {% if errors.has('virtual_balance') %}
                                                    <span class="text-danger">{{ errors.first('virtual_balance') }}</span>
                                                {% endif %}
                                            </div>
                                        </div>
                                        <div class="col-md-6">
                                            <div class="form-group">
                                                <label>
                                                    <input type="checkbox" name="active" value="1" {{ old('active', account.active) ? 'checked' : '' }}>
                                                    Active Account
                                                </label>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>

                            <!-- Template Information -->
                            <div class="box">
                                <div class="box-header with-border">
                                    <h4 class="box-title">
                                        <span class="fa fa-file-text"></span>
                                        Template Information
                                    </h4>
                                </div>
                                <div class="box-body">
                                    <div class="row">
                                        <div class="col-md-12">
                                            <div class="form-group">
                                                <label>Template:</label>
                                                <p class="form-control-static">{{ template.name }}</p>
                                            </div>
                                        </div>
                                    </div>
                                    {% if template.description %}
                                    <div class="row">
                                        <div class="col-md-12">
                                            <div class="form-group">
                                                <label>Description:</label>
                                                <p class="form-control-static">{{ template.description }}</p>
                                            </div>
                                        </div>
                                    </div>
                                    {% endif %}
                                </div>
                            </div>

                            <!-- Submit Button -->
                            <div class="box">
                                <div class="box-body">
                                    <div class="row">
                                        <div class="col-md-12">
                                            <button type="submit" class="btn btn-success">
                                                <span class="fa fa-save"></span>
                                                Update Account
                                            </button>
                                            <a href="{{ route('accounts.show', account.id) }}" class="btn btn-default">
                                                <span class="fa fa-times"></span>
                                                Cancel
                                            </a>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </form>
                    </div>
                    <div class="col-md-4">
                        <!-- Template Details -->
                        <div class="box">
                            <div class="box-header with-border">
                                <h4 class="box-title">
                                    <span class="fa fa-info-circle"></span>
                                    Template Details
                                </h4>
                            </div>
                            <div class="box-body">
                                <dl class="dl-horizontal">
                                    <dt>Template Name:</dt>
                                    <dd>{{ template.name }}</dd>
                                    
                                    <dt>Account Type:</dt>
                                    <dd>{{ template.accountType.name }}</dd>
                                    
                                    <dt>Category:</dt>
                                    <dd>{{ template.accountType.category.name }}</dd>
                                    
                                    <dt>Behavior:</dt>
                                    <dd>{{ template.accountType.behavior.name }}</dd>
                                    
                                    {% if template.description %}
                                    <dt>Description:</dt>
                                    <dd>{{ template.description }}</dd>
                                    {% endif %}
                                </dl>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<script type="text/javascript" nonce="{{ JS_NONCE }}">
document.addEventListener('DOMContentLoaded', function() {
    const ownerSelect = document.getElementById('owner');
    
    ownerSelect.addEventListener('change', function() {
        if (this.value === '__new_entity__') {
            // Reset the select to the first option
            this.selectedIndex = 0;
            
            // Show alert instead of opening new window for now
            alert('Please use the link below to create a new entity, then refresh this page.');
        }
    });
});
</script>
{% endblock %}
